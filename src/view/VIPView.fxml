                  <MenuItem fx:id="retrieveTopLikedPosts" mnemonicParsing="false" text="View Top liked posts" />
                  <MenuItem fx:id="exportPostByID" mnemonicParsing="false" text="Export post" />
                  <MenuItem fx:id="bulkImport" mnemonicParsing="false" text="Bulk Import" />
              </items>
