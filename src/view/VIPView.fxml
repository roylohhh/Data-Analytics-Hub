            <Menu fx:id="user" mnemonicParsing="false" text="User">
              <items>
                <MenuItem fx:id="editProfile" mnemonicParsing="false" text="Edit profile" />
                  <MenuItem fx:id="logout" mnemonicParsing="false" text="Logout" />
              </items>
            </Menu>
            <Menu fx:id="posts" mnemonicParsing="false" text="Posts">
              <items>
                <MenuItem fx:id="addPosts" mnemonicParsing="false" text="Add post" />
