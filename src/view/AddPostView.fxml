<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="550" prefWidth="450.0" spacing="5.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label prefHeight="17.0" prefWidth="250.0" text="ID" />
      <TextField fx:id="id" maxWidth="250.0">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin></TextField>
      <Label prefHeight="17.0" prefWidth="250.0" text="Content" />
      <TextArea fx:id="content" maxWidth ="250.0" />
      <Label prefWidth="250.0" text="Author" />
      <TextField fx:id="author" maxWidth="250.0">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </TextField>
      <Label prefHeight="17.0" prefWidth="250.0" text="Likes" />
      <TextField fx:id="likes" maxWidth="250.0" />
      <Label prefHeight="17.0" prefWidth="250.0" text="Shares" />
      <TextField fx:id="shares" maxWidth="250.0" />
      <Label fx:id="status" />
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="addPost" mnemonicParsing="false" text="Add Post" />
            <Button fx:id="close" mnemonicParsing="false" text="Close" />
         </children>
      </HBox>
   </children>
</VBox>
